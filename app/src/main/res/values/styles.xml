<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="MessageTextStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="Switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="thumbTint">@color/switch_thumb_color</item>
        <item name="trackTint">@color/switch_track_color</item>
        <item name="android:checked">false</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:insetTop">@dimen/size_8dp</item>
        <item name="android:insetBottom">@dimen/size_8dp</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/size_8dp</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="HeaderStyle">
        <item name="android:padding">@dimen/size_12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingStart">@dimen/size_12dp</item>
        <item name="android:paddingTop">@dimen/size_10dp</item>
        <item name="android:paddingBottom">@dimen/size_12dp</item>
<!--        <item name="android:padding">@dimen/size_4dp</item>-->
        <item name="android:textSize">22sp</item>
        <item name="android:fontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="MenuItemStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/size_16dp</item>
        <item name="android:paddingTop">@dimen/size_21dp</item>
        <item name="android:paddingBottom">@dimen/size_21dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MenuIconStyle">
        <item name="android:layout_width">@dimen/size_24dp</item>
        <item name="android:layout_height">@dimen/size_24dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/size_12dp</item>
        <item name="tint">@color/yp_gray</item>
    </style>

    <style name="TapBarButtonStyle">
        <item name="android:layout_width">@dimen/size_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:insetTop">@dimen/size_0dp</item>
        <item name="android:insetBottom">@dimen/size_0dp</item>
        <item name="android:padding">@dimen/size_8dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="cornerRadius">@dimen/size_0dp</item>
        <item name="iconGravity">textTop</item>
        <item name="iconPadding">@dimen/size_8dp</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ActiveTabBarButtonStyle" parent="TapBarButtonStyle">
        <item name="iconTint">@color/yp_blue</item>
        <item name="android:textColor">@color/yp_blue</item>
    </style>


    <style name="ArrowBack" >
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/size_12dp</item>
        <item name="android:src">@drawable/arrow_back</item>
        <item name="tint">?attr/colorOnPrimary</item>
    </style>

</resources>